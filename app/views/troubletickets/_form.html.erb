
<%= simple_form_for(@troubleticket) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<%#= @current_user.id %>

  <div class="form-inputs">

    <%= f.input :user_id , :readonly => true, :as => :hidden,input_html: { value: @current_user.id } %>
    <%= f.input :status , :as => :hidden, :disabled => true  %>
    <%= f.input :campaign %>
    <%= f.input :subject %>
    <%= f.input :message %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
