<% @user = current_user %>
<% if user_signed_in? && @user.admin %>


<h1>New Product</h1>

<%= render 'form', product: @product %>

<%= link_to 'Back', products_path %>

<% else %>


    <div class="alert alert-warning" role="alert">You must be signed in as administrator to add a new product.</div>

<% end %>
