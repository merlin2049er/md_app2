<% @user = current_user %>
<% if user_signed_in? && @user.admin %>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Announcements:
    <% if @announcement.empty? %>
      Nothing here...
    <% else %>
      <%= @announcement.count %> announcements here...
    <% end %>
  </div>

  <div class="panel-body">
    <table class="table" >
  <thead>
    <tr>
      <th>Announcement</th>
      <th>Enabled</th>
      <th>Action</th>
      <th colspan="3"></th>
    <tr>
  </thead>

 <tbody>
   <% @announcement.each do |announcement| %>
     <tr>
       <td><%= announcement.announcement %></td>
       <td><%= announcement.enabled %></td>
       <td><%= link_to 'Edit', edit_announcement_path(announcement) %> <%= link_to '    Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
   <% end %>


  </tbody>
</table>

</div>
</div>


  <div class="pagenav">
    <%== pagy_bootstrap_nav(@pagy) %> <br>
  </div>


  <% else %>
    <div class="alert alert-warning" role="alert"> You must be signed in to view the Annoucements.</div>
  <% end %>
