<script>
  $("#grid-basic").bootgrid();

</script>


<% if user_signed_in? %>

<div class="table-responsive">
    <!-- Default panel contents -->
    <div class="panel-heading">Notifications:  <% if @notifications.empty?  %>
        Nothing here...
      <% else %>
        <%= @notifications.count %> items...
      <% end %>
      <div class="pull-right"><font size="1">Personalized notification messages from us.</font> </div>

    </div>
    <div class="panel-body">

      <!--  <table class="table"> -->
         <table id="grid-basic" class="table table-condensed table-hover table-striped">

        <thead>
        <tr>
          <!-- <th colspan="3"></th> -->
          <th>Added</th>
          <th>Notification</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>

        <% @notifications.each do |notification| %>
          <tr class="<%= cycle("even", "odd") %>">
            <td><%= notification.created_at.strftime("%m/%d/%Y")   %> </td>
            <td> <%= link_to notification.notify_msg , notification  %></td>

        <td><%= link_to 'Remove', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <!-- <br> -->
    </div></div>

  <div class="pagenav">
  <%== pagy_bootstrap_nav(@pagy) %> <br/>
</div>

<% else %>

  <div class="alert alert-warning" role="alert">You must be signed in to see the notifications.</div>

<% end %>
